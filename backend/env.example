PORT=3001
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# 数据库配置
# 使用SQLite（默认）或PostgreSQL
# 如果设置了DATABASE_URL，将使用PostgreSQL，否则使用SQLite
DATABASE_URL=postgresql://postgres:password@localhost:5432/postgres
# 或者分别配置：
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=postgres
# DB_USER=postgres
# DB_PASSWORD=password

# 又拍云配置
UPYUN_BUCKET=filmtrip-dev
UPYUN_OPERATOR=operator_name
UPYUN_PASSWORD=operator_password_plaintext
UPYUN_FORM_API_SECRET=form_api_secret
UPYUN_CDN_DOMAIN=img.filmtrip.cn
UPYUN_IMAGE_PROCESSING_ENABLED=false
UPYUN_STYLE_THUMB=thumb
UPYUN_STYLE_SIZE1024=preview
UPYUN_STYLE_SIZE2048=large
UPYUN_STYLE_WATERMARK=watermark
UPYUN_NOTIFY_URL=https://api.filmtrip.cn/api/storage/callback
UPYUN_RETURN_URL=
UPYUN_DIRECT_UPLOAD_ENABLED=false
